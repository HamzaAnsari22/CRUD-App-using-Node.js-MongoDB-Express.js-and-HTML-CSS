      <script>
        function validateImage() {
          var fileInput = document.getElementById('screenshot');
          var filePath = fileInput.value;
          var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
          if (!allowedExtensions.exec(filePath)) {
            alert('Please upload an image file (jpg, jpeg, png, gif).');
            fileInput.value = '';
            return false;
          }
          if (fileInput.files[0].size > 4000000) {
            alert('The file size should not exceed 1MB.');
            fileInput.value = '';
            return false;
          }
          return true;
        }
        document.getElementById('submitBtn').addEventListener('click', function(e) {
        e.preventDefault(); // prevent the form from submitting normally
        var input = document.getElementById('amount').value;
          if (input < 100) {
            alert('Please enter a number greater than or equal to 100.');
            return false;
          }
          if (!validateImage()) {
            return false;
          }
         
          swal('Success!', 'Thankyou for Deposit, deposit status will be updated shortly!.', 'success'); // show the SweetAlert success message
          setTimeout(() => {
            document.getElementById('form').submit(); // submit form here
          }, 2000);
      });
      </script>

